pipeline {
    agent any

    stages {
        stage('build') {
            steps {
                git 'https://github.com/DevVox04/CI-CD.git'
                sh 'npm install'
            }
        }

        stage('deploy') {
            steps {
                sh 'pm2 delete app || true'
                sh 'pm2 start app.js --name app'
            }
        }
    }
}
